package com.project.quiz_app.config;

import java.sql.Types;

import org.hibernate.dialect.Dialect;
import org.hibernate.dialect.function.StandardSQLFunction;
import org.hibernate.type.StandardBasicTypes;

public class SQLiteDialect extends Dialect {
      
	public SQLiteDialect() {
        // Register column types
        registerColumnTypes(Types.INTEGER, "integer");
        registerColumnTypes(Types.BIGINT, "bigint");
        registerColumnTypes(Types.VARCHAR, "varchar");
        registerColumnTypes(Types.BOOLEAN, "boolean");
        registerColumnTypes(Types.DOUBLE, "double");
        registerColumnTypes(Types.FLOAT, "float");
        registerColumnTypes(Types.DATE, "date");
        registerColumnTypes(Types.TIMESTAMP, "datetime");

        // Register functions
        registerFunction("lower", new StandardSQLFunction("lower", StandardBasicTypes.STRING));
        registerFunction("upper", new StandardSQLFunction("upper", StandardBasicTypes.STRING));
    }

    @Override
    public boolean dropConstraints() {
        return false;
    }

    @Override
    public boolean hasAlterTable() {
        return false;
    }

    @Override
    public boolean qualifyIndexName() {
        return false;
    }

    @Override
    public boolean supportsTemporaryTables() {
        return true;
    }

    @Override
    public boolean supportsIfExistsBeforeTableName() {
        return true;
    }

    @Override
    public boolean supportsCascadeDelete() {
        return false;
    }
}
